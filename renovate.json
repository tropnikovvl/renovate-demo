{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "stable/*",
        "bitnami/*"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "depTypeList": [
        "helmfile"
      ]
    }
  ],
  "platforms": [
    {
      "platform": "github",
      "baseUrl": "https://api.github.com",
      "env": {
        "GITHUB_TOKEN": "${secrets.GH_TOKEN}"
      }
    }
  ]
}
